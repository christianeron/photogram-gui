<h1> List of users </h1>

<form action="/create_user" method="post">
  <label for="username_id">Username</label>
  <input id="username_id" type = "text" name="query_name" placeholder="Enter a username...">
  <button>Add user</button>
</form>

<hr>

<table border="1">
	<tr>
    <th>
      ID
    </th>
    <th>
      Username
    </th>
    <th>
    </th>
	</tr>
  <% User.all.order(:username).each do |user| %>
	<tr>
    <td>
      <%= user.id %>
    </td>
    <td>
      <%= user.username %>
    </td>
    <td>
      <a href = "/users/<%= user.username%>">Show details</a>
    </td>
	</tr>
  <% end %>
</table>
