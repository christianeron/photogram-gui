<h1> List of users </h1>

<form action="/users">
  <label for="new_user">Username</label>
  <input id="new_user" name="username" placeholder="Enter a username...">
  <button>Add user</button>

<hr>

<table border="1">
	<tr>
    <th>
      ID
    </th>
    <th>
      Username
    </th>
    <th>
    </th>
	</tr>
  <% User.all.each do |user| %>
	<tr>
    <td>
      <%= user.id %>
    </td>
    <td>
      <%= user.username %>
    </td>
    <td>
      <a href = "/users/<%= user.id%>">Show details</a>
    </td>
	</tr>
  <% end %>
</table>
